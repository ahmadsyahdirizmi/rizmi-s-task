      "name": "Logging",
      "description": "UUID: deb5483e-36e1-4688-b7f5-ea07361b26d1"
    }
  ],
  "paths": {
    "/ble/device_communications/read": {
      "get": {
        "tags": ["Device Communications"],
        "summary": "Read Device Communications",
        "description": "Retrieve the current configuration of the device communications.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "If `communication_type` is `RTU`, then the following keys are required: baud rate, data bits, parity, and stop bits. If `communication_type` is `TCP/IP`, then the following keys are required: IP address, server port, connect timeout, and protocol version.",
            "required": true,
            "schema": {
              "type": "object",
              "example": {
                "device_name": "Sensor Environment",
                "communication_type": "RTU",
                "baud_rate": 9600,
                "bit_data": 8,
                "parity": "N",
                "stop_bit": 1,
                "refresh_rate": 1000
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Configuration data successfully obtained"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/ble/device_communications/write": {
      "post": {
        "tags": ["Device Communications"],
        "summary": "Write Device Communications",
        "description": "Send the device communications configuration to the client.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Device communications configuration",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "device_name": {"type": "string"},
                "communication_type": {"type": "string"},
                "baud_rate": {"type": "integer"},
                "bit_data": {"type": "integer"},
                "parity": {"type": "string"},
                "stop_bit": {"type": "integer"},
                "refresh_rate": {"type": "integer"}
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data successfully sent to the client."
          },
          "400": {
            "description": "Invalid data"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/ble/data_modbus_config/read": {
      "get": {
        "tags": ["Data Modbus Configuration"],
        "summary": "Read Data Modbus Config",
        "description": "Retrieve the current configuration of the data modbus.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The value of `device_name` must match one of the device names listed in Device Communications.",
            "required": true,
            "schema": {
              "type": "object",
              "example": {
                "device_name": "Sensor Environment",
                "slave_id": 1,
                "function": "INPUT_REGISTERS",
                "address": 4096,
                "data_name": "Temperature",
                "data_type": "INT16"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Configuration data successfully obtained"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/ble/data_modbus_config/write": {
      "post": {
        "tags": ["Data Modbus Configuration"],
        "summary": "Write Data Modbus Config",
        "description": "Send the Data Modbus configuration to the client.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Adding `value` and `timestamp` keys after retrieving data from the Modbus device",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "device_name": {"type": "string"},
                "slave_id": {"type": "integer"},
                "function": {"type": "string"},
                "address": {"type": "integer"},
                "data_name": {"type": "string"},
                "data_type": {"type": "string"},
                "value": {"type": "number"},
                "timestamp": {"type": "integer"}
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data successfully sent to the client."
          },
          "400": {
            "description": "Invalid data"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/ble/server_config/read": {
      "get": {
        "tags": ["Server Configuration"],
        "summary": "Read Server Config",
        "description": "Retrieve the current configuration of the server connection.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "If `connection_type` is `Ethernet`, and `not automatic`, then IP address and MAC address are required. If `connection_type` is `WiFi`, then wifi ssid and wifi password are required.\n If `protocol` is `MQTT`, then then the following keys are required: server name, port, client id, and qos level. If server authentication is needed, mqtt username and mqtt password are also required.\n If `protocol` is `HTTP`, then server url (including access token) is required. If server authentication is needed, token bearer is also required.",
            "required": true,
            "schema": {
              "type": "object",
              "example": {
                "connection_type": "WiFi",
                "wifi_ssid": "MyWiFiNetwork",
                "wifi_password": "MyWiFiPassword",
                "protocol": "MQTT",
                "server_name": "broker.hivemq.com",
                "port": 1883,
                "client_id": "ESP32Client",
                "qos_level": 1,
                "auth": true,
                "mqtt_username": "mqtt_user",
                "mqtt_password": "mqtt_pass"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Configuration data successfully obtained"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/ble/server_config/write": {
      "post": {
        "tags": ["Server Configuration"],
        "summary": "Write Server Config",
        "description": "Send the server configuration to the client.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Server configuration",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "connection_type": {"type": "string"},
                "ssid": {"type": "string"},
                "wifi_password": {"type": "string"},
                "protocol": {"type": "string"},
                "server_name": {"type": "string"},
                "port": {"type": "integer"},
                "client_id": {"type": "string"},
                "qos_level": {"type": "integer"},
                "auth": {"type": "boolean"},
                "mqtt_username": {"type": "string"},
                "mqtt_password": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data successfully sent to the client."
          },
          "400": {
            "description": "Invalid data"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/ble/logging/read": {
      "get": {
        "tags": ["Logging"],
        "summary": "Read Logging Config",
        "description": "Retrieve the current logging configuration.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The data in `logged_data` is sourced from the Data Modbus Configuration and consists of one or more selected data points.\n`Logging retention` can be set to 1 week (604800 seconds), 1 month (2592000 seconds), and 3 months (7776000 seconds).\n`Logging interval` can be set to 5 minutes (300 seconds), 10 minutes (600 seconds), and 30 minutes (1800 seconds)",
            "required": true,
            "schema": {
              "type": "object",
              "example": {
                "logged_data": ["Temperature", "Humidity"],
                "logging_retention": 7776000,  
                "interval": 300 
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Configuration data successfully obtained"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/ble/logging/write": {
      "post": {
        "tags": ["Logging"],
        "summary": "Write Logging Config",
        "description": "Send the Logging configuration to the client.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Logging configuration",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "logged_data": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "logging_retention": {"type": "integer"},
                "interval": {"type": "integer"}
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data successfully sent to the client."
          },
          "400": {
            "description": "Invalid data"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
